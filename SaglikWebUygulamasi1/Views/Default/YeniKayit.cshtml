@model SaglikWebUygulamasi1.Models.YeniKayitClass

@{
    ViewBag.Title = "YeniKayit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login - SB Admin</title>
    <link href="~/Files/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <!-- jQuery'yi ekleyin -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <!-- Oluşturduğunuz JavaScript dosyasını ekleyin -->
    <script src="~/Files/js/Login/login.js"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication" style="background-color: #e74c3c ">
        <div id="layoutAuthentication_content>
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                <div class="card-body">
                                    <form action="@Url.Action("YeniKayitEkle", "Default")" method="post">
                                        @Html.AntiForgeryToken()  <!-- Bu olmayınca işlem gerçekleşmiyor -->
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="yeniKullaniciTC" name="yeniKullaniciTC" type="text" placeholder="name@example.com" required />
                                            <label for="inputTC">TC</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="yeniKullaniciPassword" name="yeniKullaniciPassword" type="password" placeholder="Password" required />
                                            <label for="inputPassword">Password</label>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <input class="btn btn-primary" type="submit" value="Kayıt Ol">
                                        </div>
                                    </form>
                                </div>
                          </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Files/js/scripts.js"></script>
</body>
</html>




