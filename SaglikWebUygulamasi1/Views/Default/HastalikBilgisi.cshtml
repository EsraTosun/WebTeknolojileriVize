@model List<SaglikWebUygulamasi1.Models.HastalikBilgisi>
@{
    ViewBag.Title = "HastalikBilgisi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <div class="container-fluid px-4">
            <div>
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        DataTable Example
                    </div>
                    <!-- TABLONUN İÇERİĞİ-->
                    <div class="card-body">
                        <table id="datatablesSimple">
                            <thead>
                                <tr>
                                    <th>Hasta TC</th>
                                    <th>Hasta Adı</th>
                                    <th>Hasta Soyad</th>
                                    <th>Hastalık Adıi</th>
                                    <th>Hastalık Teşhis Tarihi</th>
                                    <th>Hastalık İyileştiği Tarihi</th>
                                    <th>Kullandığı İlaç</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.HastaTC</td>
                                        <td>@item.Hasta.HastaAd</td>
                                        <td>@item.Hasta.HastaSoyad</td>
                                        <td>@item.Hastalik.HastalikAd</td>
                                        <td>@item.HastalikTeshisTarihi.Date.ToShortDateString()</td>
                                        <td>@item.HastalikIyilestigiTarih</td>
                                        <td>@item.Ilac.IlacAd</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


