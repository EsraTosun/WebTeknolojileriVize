@model List<SaglikWebUygulamasi1.Models.TahlilBilgisi>


@{
    ViewBag.Title = "TahlilBilgisi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TahlilBilgisi</h2>

<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <div class="container-fluid px-4">
            <div>
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        DataTable Example
                    </div>
                    <!-- TABLONUN İÇERİĞİ-->
                    <div class="card-body">
                        <table id="datatablesSimple">
                            <thead>
                                <tr>
                                    <th>Hastane TC</th>
                                    <th>Hasta Ad</th>
                                    <th>Hasta Soyad</th>
                                    <th>Tahlil Tarihi</th>
                                    <th>Glukoz</th>
                                    <th>Kolestrol</th>
                                    <th>Hemoglobin</th>
                                    <th>KanBasıncı</th>
                                    <th>B12</th>
                                    <th>Kalsiyum</th>
                                    <th>A</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.HastaTC</td>
                                        <td>@item.Hasta.HastaAd</td>
                                        <td>@item.Hasta.HastaSoyad</td>
                                        <td>@item.TahlilTarihi.Date.ToShortDateString()</td>
                                        <td>@item.Glukoz</td>
                                        <td>@item.Kolestrol</td>
                                        <td>@item.Hemoglobin</td>
                                        <td>@item.KanBasıncı</td>
                                        <td>@item.B12</td>
                                        <td>@item.Kalsiyum</td>
                                        <td>@item.A</td>
                                    </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

