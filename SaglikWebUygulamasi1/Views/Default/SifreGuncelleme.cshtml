@model SaglikWebUygulamasi1.Models.Login

@{
    ViewBag.Title = "SifreGuncelleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Benim Bilgilerim</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        #container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
            text-align: center;
        }

        h1 {
            color: #4285f4;
        }

        .info {
            margin-top: 20px;
        }

            .info p {
                margin: 10px 0;
            }

        strong {
            color: #333;
        }
    </style>
</head>
<body>
    <div id="container">
        <h1>Giriş Bilgileri</h1>
        <form action="@Url.Action("SifreGuncelleme", "Default")" method="post">
            @Html.AntiForgeryToken()
            <p><strong>TC: </strong>@Model.HastaTC</p>
            <div class="form-floating mb-3" onclick="toggleInput('password')">
                <strong>Password: </strong>
                <span id="passwordSpan">@Model.HastaPassword</span>
                <input type="text" class="form-control" id="passwordInput" name="password" value="@Model.HastaPassword" style="display:none;" />
            </div>
            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                <input class="btn btn-primary" type="submit" value="Güncelle">
            </div>
        </form>
    </div>
    <script>
        function toggleInput(fieldName) {
            var spanElement = document.getElementById(fieldName + "Span");
            var inputElement = document.getElementById(fieldName + "Input");

            if (spanElement.style.display !== "none") {
                spanElement.style.display = "none";
                inputElement.style.display = "inline";
                inputElement.focus();
            } else {
                spanElement.style.display = "inline";
                inputElement.style.display = "none";
            }
        }
    </script>

</body>
</html>

